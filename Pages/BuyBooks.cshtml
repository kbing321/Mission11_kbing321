@page
@model Mission09_kbing321.Pages.BuyBooksModel
@{
}

<h2>Your Cart</h2>

@*table showing the books in the cart with the price, quantity, and totals*@
<table class="table table-bordered table-striped collapsing">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.cart.Books)
            {
                <tr>
                    <td>@i.Book.Title</td>
                    <td>@i.Quantity</td>
                    <td>@i.Book.Price</td>
                    <td>@i.Quantity * @i.Book.Price</td>
                </tr>
            }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total: </td>
            <td>@Model.cart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

@*button to return to page user left from*@
<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>